<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:keepScreenOn="true"
    android:layoutDirection="rtl"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@drawable/scroll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            >



                <ImageView
                    android:id="@+id/kafsh_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center"
                    android:src="@drawable/empty"
                    android:adjustViewBounds="true"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/kafsh_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="کفش زنانه"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />


                <TextView
                    android:id="@+id/kafsh_jur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="370000 ریال"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    />


                        <TextView
                            android:id="@+id/kafsh_najur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:text="370000 ریال"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            />


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        >

                        <TextView
                            android:id="@+id/kafsh_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextHint"
                            android:text="205"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            />

                    <TextView
                        android:id="@+id/kafsh_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreen"
                        android:text="205"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        />

                </TableRow>

                    <TextView
                        android:id="@+id/kafsh_property"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGreen"
                        android:text="چرم طبیعی"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_weight="1"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="10dp"
                        android:background="#c0c0c0"/>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        >


                        <TextView
                            android:id="@+id/brand1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="برند 1"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/brand2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="برند 2"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        >


                        <TextView
                            android:id="@+id/brand3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="برند 3"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/brand4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:text="برند 4"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:layout_weight="1"
                            />

                    </TableRow>


                </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="10dp"
                android:background="#c0c0c0"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:gravity="right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="نوع خرید"
                    android:gravity="right"
                    android:textSize="10sp"
                    />

                <Spinner
                    android:id="@+id/sp_sell_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorAccent"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="رنگ"
                    android:gravity="right"
                    android:textSize="10sp"
                    />

                <Spinner
                    android:id="@+id/sp_color_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorAccent"
                    android:layout_weight="1"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="سایز"
                    android:gravity="right"
                    android:textSize="10sp"
                    />

                <Spinner
                    android:id="@+id/sp_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorAccent"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="تعداد"
                    android:gravity="right"
                    android:textSize="10sp"
                    />

                <Spinner
                    android:id="@+id/sp_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorAccent"
                    android:layout_weight="1"
                    />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:drawable/ic_input_add"
                    />

            </TableRow>

            <TableRow
                android:visibility="gone"
                android:id="@+id/tb_najur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextHint"
                    android:text="تعداد سفارش"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tx_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tx_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreen"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btn_remove"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:drawable/ic_delete"
                    />

            </TableRow>


            <Button
                android:id="@+id/btn_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="ثبت سفارش"
                android:textColor="#ffffff"
                android:layout_weight="1"
                />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
